<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<VBox fx:id="tarjeta" styleClass="movil-card" spacing="8" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MovilCardController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
    </ImageView>

    <Label fx:id="modeloLabel" text="Nombre del Móvil" styleClass="nombre" />
    <VBox alignment="CENTER_LEFT" spacing="4">
        <Label fx:id="spec1Label" styleClass="small-text">
            <graphic>
                <Text text="&#xe13d;" styleClass="material-icons"/> <!-- Peso -->
            </graphic>
        </Label>

        <Label fx:id="spec2Label" text="Especificación 2: Valor 2" styleClass="small-text">
            <graphic>
                <Text text="&#xf7a3;" styleClass="material-icons"/> <!-- RAM -->
            </graphic>
        </Label>

        <Label fx:id="spec3Label" text="Especificación 2: Valor 2" styleClass="small-text">
            <graphic>
                <Text fx:id="color" text="&#xea38;" styleClass="material-icons-color"/> <!-- Cámara delantera -->
            </graphic>
        </Label>
        <Label fx:id="spec4Label" text="Especificación 2: Valor 2" styleClass="small-text">
            <graphic>
                <Text  text="&#xe412;" styleClass="material-icons" /> <!-- Cámara trasera -->
            </graphic>
        </Label>
        <Label fx:id="precioLabel" text="Precio: 999€" styleClass="small-text" />
    </VBox>

</VBox>

