<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import org.controlsfx.control.GridView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <left>
        <VBox spacing="10.0" styleClass="sidebar" alignment="TOP_CENTER" prefWidth="200.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <Button text="TODOS" onAction="#mostrarTodos" styleClass="dashboard-outline-button" maxWidth="Infinity" />
            <Button text="FILTRAR MARCA SAMSUNG" onAction="#filtrarPorMarcaSamsung" styleClass="dashboard-outline-button" maxWidth="Infinity" />
            <Button text="FILTRAR PRECIO" onAction="#filtrarPorPrecioMenor500" styleClass="dashboard-outline-button" maxWidth="Infinity" />
            <VBox  maxWidth="Infinity" styleClass="dashboard-outline-button" >
                <Label fx:id="icono"  />
                <TextField fx:id="campoBusqueda" promptText="Buscar" styleClass="text-field" maxWidth="Infinity" />

            </VBox>

        </VBox>
    </left>
    <center>
        <GridView fx:id="catalogoGrid"  styleClass="catalogo-container" prefWidth="800">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridView>
    </center>
</BorderPane>