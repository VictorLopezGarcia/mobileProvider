<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <left>
        <VBox spacing="10.0" styleClass="sidebar" alignment="TOP_CENTER" prefWidth="200.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <Button text="TODOS" onAction="#mostrarTodos" styleClass="dashboard-outline-button" maxWidth="Infinity" />
            <Button text="FILTRAR MARCA" onAction="#filtrarPorMarca" styleClass="dashboard-outline-button" maxWidth="Infinity" />
            <Button text="FILTRAR PRECIO" onAction="#filtrarPorPrecio" styleClass="dashboard-outline-button" maxWidth="Infinity" />
        </VBox>
    </left>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <FlowPane fx:id="catalogoContainer" hgap="20.0" vgap="20.0" styleClass="catalogo-container" prefWrapLength="800.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>
</BorderPane>